extends ../base

block content
  if errorMessage 
    span=errorMessage
  form(method="post").change-pw--form
    label Old Password
      input(placeholder="Old Password", type="password", name="oldPassword")
    label New Password
      input(placeholder="New Password", type="password", name="newPassword1")
    label Confirm Password
      input(placeholder="New Password Confirmation", type="password", name="newPassword2")
    button(type="submit", value="Change Password")
      i.fa-solid.fa-pen
        span Update Password