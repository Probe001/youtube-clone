extends base.pug

block content
  if errorMessage 
    span=errorMessage
  form(method="POST")
    input(placeholder="Video Title",name="title", required, maxlength=80)
    input(placeholder="Video Description", name="description", required, minlength=20)
    input(placeholder="Hashtags, separated by comma.", name="hashtags")
    input(type="submit",value="업로드")